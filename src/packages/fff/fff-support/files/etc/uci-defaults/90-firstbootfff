LOCALUPGRADESCRIPT="/etc/firstbootfff"

#add LOCALUPGRADESCRIPT to sysupgrade
grep -q ^"${LOCALUPGRADESCRIPT}"$ /etc/sysupgrade.conf || echo "$LOCALUPGRADESCRIPT" >> /etc/sysupgrade.conf

# process user commands
[ -s "$LOCALCONFIGSCRIPT" ] && {
	sh /etc/firstbootfff
}
